# Configure the random numbers generator
cfgUpdate() {
case $1 in

"cps") # CPS Configuration
S_CPS=$2
S_CPS_SLEEP=$(calc "1 / $2")
;;

"gg") # Goal Gap Configuration
S_RND_GG_MIN=$2
S_RND_GG_MAX=$3
S_RND_GG_DLT=$(calc "$3 - $2")
