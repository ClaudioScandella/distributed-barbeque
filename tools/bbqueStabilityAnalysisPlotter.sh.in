S_GG_EMA_ALPHA=$(emaInit  $4)
;;

"gv") # Goal Gap Variation Configuration
S_GV_EMA_SMPLS=$2
S_GV_EMA_ALPHA=$(emaInit  $2)
;;

"mode") # Simulation Mode
S_SM_CAPP=$2
S_SM_CGGT=$3
S_SM_CRRT=$4
;;

esac

# Dump current configuration
cfgReport

}

