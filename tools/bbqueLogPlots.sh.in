##	stdbuf -oL tail -f $1 | $BBQUE_SYSROOT/bin/feedgnuplot --title "$2" &
#	#stdbuf -oL grep "$1" > $2
#}

# Startup all the metrics plotter
setup_metric_plot $BBQUE_METRICS_AWM "PROF_AWMV" \
	"AWMs Value (per priority class)" 640x313+624+18
setup_metric_plot $BBQUE_METRICS_APP "PROF_APPV" \
	"APPs Value (per priority class)" 640x313--9+18
setup_metric_plot $BBQUE_METRICS_FNS "PROF_FNSI" \
	"Fairness Index (per priority class)" 640x313+624+361
setup_metric_plot $BBQUE_METRICS_WLM "PROF_WLMI" \
	"Workload Mix Index (per priority class)" 640x313--9+361
sleep 2

touch $BBQUE_LOGFILE >/dev/null 2>&1
tail -f $BBQUE_LOGFILE | stdbuf -oL $BBQUE_SYSROOT/sbin/bbque-logparser | \
	stdbuf -oL tee \
	$BBQUE_METRICS_AWM \
	$BBQUE_METRICS_APP \
	$BBQUE_METRICS_WLM \
	> $BBQUE_METRICS_FNS
